<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyFinanceApp.Views.MainPage"
             Title="Dashboard">
  <ScrollView>
    <VerticalStackLayout Padding="12">
      <Label Text="My Finance" FontSize="24" HorizontalOptions="Center" />
      <Button Text="View Transactions" Clicked="OnViewTransactionsClicked" />
      <Button Text="Open Reports" Clicked="OnOpenReports" />
    </VerticalStackLayout>
  </ScrollView>
</ContentPage>
